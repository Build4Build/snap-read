{
  "expo": {
    "name": "SnapRead",
    "slug": "snap-read",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6200EE"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.snapread.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "SnapRead needs camera access to scan documents and text.",
        "NSPhotoLibraryUsageDescription": "SnapRead needs photo library access to save and import documents."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6200EE"
      },
      "package": "com.snapread.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SnapRead to access your camera to scan documents."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "a69300ef-e612-4a77-80a5-e47412569414"
      }
    },
    "screenshots": [
      {
        "image": "./assets/screenshots/home.png",
        "title": "Welcome to SnapRead",
        "subtitle": "Your AI-powered reading companion"
      },
      {
        "image": "./assets/screenshots/camera.png",
        "title": "Smart Document Scanning",
        "subtitle": "Point and capture any text"
      },
      {
        "image": "./assets/screenshots/summary.png",
        "title": "Instant Summaries",
        "subtitle": "Get the key points quickly"
      },
      {
        "image": "./assets/screenshots/history.png",
        "title": "Reading History",
        "subtitle": "Track your progress"
      }
    ]
  }
}
